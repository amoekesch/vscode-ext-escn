{
    "name": "eyelit-scenario-script",
    "displayName": "Eyelit Scenario Script",
    "description": "Language Support for the Eyelit Scenario Engine",
    "version": "0.1.0",
    "publisher": "andreas-moekesch",
    "license": "GPLv3",
    "repository": {
        "type": "git",
        "url": "https://github.com/amoekesch/vscode-ext-escn"
    },
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "escn",
            "aliases": ["Eyelit Scenario Script", "escn"],
            "extensions": [".escn",".scn"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "escn",
            "scopeName": "source.eyelit.scenario.escn",
            "path": "./syntaxes/escn.tmLanguage.json"
        }],
        "snippets": [
            {
                "language": "escn",
                "path": "./snippets/escn.snippets.json"
            },
            {
                "language": "escn",
                "path": "./snippets/escn.views.json"
            },
            {
                "language": "escn",
                "path": "./snippets/escn.items.json"
            },
            {
                "language": "escn",
                "path": "./snippets/escn.containers.json"
            },
            {
                "language": "escn",
                "path": "./snippets/escn.agents.json"
            },
            {
                "language": "escn",
                "path": "./snippets/escn.packages.json"
            },
            {
                "language": "escn",
                "path": "./snippets/escn.functions.json"
            },
            {
                "language": "escn",
                "path": "./snippets/escn.contexts.json"
            },
            {
                "language": "escn",
                "path": "./snippets/escn.blocks.json"
            },
            {
                "language": "escn",
                "path": "./snippets/escn.conditions.json"
            },
            {
                "language": "escn",
                "path": "./snippets/escn.keywords.json"
            }
        ]
    }
}
